{
    "$schema": "../gen/schemas/android-schema.json",
    "identifier": "android-capability",
    "description": "Capability for the main window",
    "windows": ["main"],
    "permissions": [
      "path:default",
      "event:default",
      "window:default",
      "app:default",
      "resources:default", 
      "menu:default",
      "tray:default",
      "window:allow-set-title",
      "shell:allow-open",
      "webview:allow-create-webview-window",
      "webview:allow-create-webview",
      "window:allow-create",
      {
        "identifier":"http:default",
        "allow": [{"url": "http://**"}]
      }
    ]
  }